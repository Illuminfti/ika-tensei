# Sui Seal Registry Object ID
SUI_REGISTRY_ID=0xffa3bb04b8cdb11c905900da846cc92f70049654b2d9661269c8ba73c3e71294

# Sui Seal Vault Object ID
SUI_VAULT_ID=0x0fccb85175e9f0a0ad99e445bdde187be2a2967d73b0402cb4ca147c5273b9a0

# Solana Program ID (reincarnation)
SOLANA_PROGRAM_ID=mbEQvaiUYdc65Qz4rd67oBY1LbSCBq1Da8Y1MciwtPa

# Metaplex Core Program ID
MPL_CORE_PROGRAM_ID=CoREENxT6tW1HoK8ypY1SxRMZTcVPm7R94rH4PZNhX7d

# ============================================================================
# IKA dWallet Configuration
# ============================================================================

# dWallet Cap ID (for signing)
DWALLET_CAP_ID=0xae22f56a0c471eb338be0e5103c074a7a76b86271ca0c90a9f6e508d5741d7fa

# dWallet ID
DWALLET_ID=0x36ada1f568e2f8aa89590d0157db5732d5ade4080dbf34adddb4e52788a39a32

# Encrypted Share Table ID
ENCRYPTED_SHARE_ID=0x09988d0cc971bf6f47c3d21247e4aa391a22f9d2c21995c87dcfbd0ca34287dc

# dWallet Public Key (hex)
DWALLET_PUBKEY_HEX=46453f6becb294253dd798a96d86bf62871239aeda8d67d6ea5f788fb0cab756

# ============================================================================
# Sui Keypair (for signing transactions)
# ============================================================================

# Sui keystore - set as base64 encoded secret key (without 0x prefix)
# Example: cat ~/.sui/sui_config/sui.keystore | jq -r '.[0]' | base64 -d | cut -c2- | head -c64
SUI_KEYPAIR_BASE64=

# ============================================================================
# Solana Keypair (for paying fees)
# ============================================================================

# Solana keypair - set as base64 encoded 64-byte secret key
# Example: cat ~/.config/solana/id.json | jq -r '.[]' | head -c128 | base64 -d
SOLANA_KEYPAIR_BASE64=

# ============================================================================
# Relayer Configuration
# ============================================================================

# HTTP Health Check Port
HEALTH_PORT=3470

# Database Path (SQLite)
DB_PATH=./data/relayer.db

# Queue Processing
QUEUE_CONCURRENCY=5
QUEUE_POLL_INTERVAL_MS=5000

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=5000

# Log Level (debug, info, warn, error)
LOG_LEVEL=info
